<!DOCTYPE html>
<html lang="en">
    <head>
        <!-- Viewport -->
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <!-- JQuery -->
        <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
        <!-- Bootstrap -->
        <script src="bootstrap-5.0.0-beta1-dist/js/bootstrap.min.js"></script>
        <link rel="stylesheet" href="bootstrap-5.0.0-beta1-dist/css/bootstrap.min.css">
        <!-- FontAwesome -->
        <script src="https://kit.fontawesome.com/c0fad50d4f.js" crossorigin="anonymous"></script>
        <!-- Highlight JS -->
        <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/highlight.js/10.5.0/styles/default.min.css">
        <script src="//cdnjs.cloudflare.com/ajax/libs/highlight.js/10.5.0/highlight.min.js"></script>
        <!-- Showndown JS -->
        <script src="/showdownjs-showdown-3c120ed/src/showdown.js"></script>
        <!-- Title -->
        <title>MarkNote | Editor</title>
    </head>
    <body>
        <!-- Highlight / Showdown JS Script -->
        <script>

            // On ENTER
            $(document).keypress(function(e)
            {
                var key = e.which;
                if(key == 13) // Enter Key
                {
                    test();
                }
            });

            function test()
            {
                var settings = {
                    "url": "https://8080-cs-329088372048-default.us-east1.cloudshell.dev/mdconvert/",
                    "method": "GET",
                    "timeout": 0,
                    "data": {
                        "text": $('#editor').val()
                    }
                }
                $.ajax(settings).done(function (response) {
                    console.log(response);
                    $('#viewer').html(response);
                });

                hljs.initHighlightingOnLoad();
            };

        </script>

        <%- include('header') %>
        <div class="container-fluid mt-4">
            <div>
                <div class="col-sm border" id="viewer"></div>
                <div class="form-floating">
                    <textarea class="form-control" placeholder="Start Writing!" id="editor"></textarea>
                    <label for="editor">Editor</label>
                </div>
            </div>
        </div>
        <%- include('footer') %>
    </body>
</html>