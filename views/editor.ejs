<%- include('splash') %>

<!DOCTYPE html>
<html lang="en">
    <head>
        <!-- Viewport -->
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <!-- JQuery -->
        <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
        <!-- Bootstrap -->
        <script src="bootstrap-5.0.0-beta1-dist/js/bootstrap.min.js"></script>
        <link rel="stylesheet" href="bootstrap-5.0.0-beta1-dist/css/bootstrap.min.css">
        
        <!-- FontAwesome -->
        <script src="https://kit.fontawesome.com/c0fad50d4f.js" crossorigin="anonymous"></script>
        <!-- Highlight JS -->
        <script src="/highlight/highlight.pack.js"></script>
        <link rel="stylesheet" href="/highlight/tomorrow-night.css">

        <link rel="stylesheet" href="https://cdn.jsdelivr.net/simplemde/latest/simplemde.min.css">
        <script src="https://cdn.jsdelivr.net/simplemde/latest/simplemde.min.js"></script>
        
        <!-- Title -->
        <title>MarkNote | Editor</title>

        <style>
            #save_button
            {
                z-index: 2;
                position: fixed;
                bottom: 32px;
                right: 12px;
            }
        </style>
        <script>
            // const base_url = "http://localhost:8080/";
            const base_url = "<%=GLOBAL_ROOT%>" + "/";
            var toastElList = null;
            var toastList = null;
            

            // Autosave Functionality (saves every 1 min)
            setInterval(function()
            {
                console.log("Autosaving");
                save();
            }, 60 * 1000);

            async function showToast(type, data)
            {
                // Reset all
                $("#toast_success").attr('hidden', true);
                $("#toast_warning").attr('hidden', true);
                $("#toast_danger").attr('hidden', true);

                if(type == 'success')
                {
                    $("#toast_success").attr('hidden', false);
                    
                }
                else if(type == 'warning')
                {
                    $("#toast_warning").attr('hidden', false);
                }
                else if(type == 'danger')
                {
                    $("#toast_danger").attr('hidden', false);
                }
                $("#toast_message").text(data);
                
                toastList[0].show();
            }
            
            var simplemde;

            // Keypress Methods!
            // https://stackoverflow.com/questions/93695/best-cross-browser-method-to-capture-ctrls-with-jquery#14180949
            $(window).bind('keydown', function(event) {
                if (event.ctrlKey || event.metaKey) {
                    switch (String.fromCharCode(event.which).toLowerCase()) {
                    case 's':
                        event.preventDefault();
                        save();
                        break;
                    case 'f':
                        event.preventDefault();
                        break;
                    case 'o':
                        event.preventDefault();
                        createPicker();
                        break;
                    case 'g':
                        event.preventDefault();
                        break;
                    }
                }
                if(event.altKey && String.fromCharCode(event.which).toLowerCase() == 'n')
                {
                    createNewFilePicker();
                }
                if(event.altKey && String.fromCharCode(event.which).toLowerCase() == 's')
                {
                    save();
                }
                if(event.altKey && String.fromCharCode(event.which).toLowerCase() == 'o')
                {
                    createPicker();
                }
            });

            $(document).ready(function()
            {

                var option = 
                {
                    animation: true,
                    autohide: true,
                    delay: 4000,
                }
                // Toast Initializer
                toastElList = [].slice.call(document.querySelectorAll('.toast'))
                toastList = toastElList.map(function (toastEl) {
                    return new bootstrap.Toast(toastEl, option)
                });

                


                console.log("ready");
                
                simplemde = new SimpleMDE({
                    // autosave: {
                    //     enabled: true,
                    //     uniqueId: "<%-fileId%>",
                    //     delay: 1000,
                    // },
                    element: $("#editor")[0],
                    spellChecker: false,
                    renderingConfig: {
                        singleLineBreaks: false,
                        codeSyntaxHighlighting: true,
                    },
                    tabSize: 4,
                    styleSelectedText: false
                });
            });

            // Function to save File to GDrive
            // Also changes the name of the file too.
            async function save()
            {
                var filename = null;
                var id_FileName = $("#FileName")
                if(id_FileName.val())
                {
                    // Replace with new filename
                    filename = id_FileName.val();
                }
                else
                {
                    filename = id_FileName.attr('placeholder');
                }

                // Setup for Ajax
                var settings = {
                    "url": base_url + "save",
                    "method": "POST",
                    "timeout": 0,
                    "data": {
                        "fileId": "<%-fileId%>",
                        "fileName": filename,
                        "data": simplemde.value()
                    }
                }

                // Start spinner
                $("#save_spinner").attr('hidden', false);
                $("#save_button").attr('disabled', true);
                // Save the File
                await $.ajax(settings).done(function(response)
                {
                    if(response.saved == true)
                    {
                        showToast('success', 'File Saved Successfully!')
                    }
                    else if(response.saved == false)
                    {
                        showToast('danger', 'File Failed to save<br>Try logging out and loggin back in.');
                        console.log("ERROR: " + JSON.stringify(response));
                    }
                });
                // Stop Spinner
                $("#save_spinner").attr('hidden', true);
                $("#save_button").attr('disabled', false);
                $("#FileName").attr('placeholder', filename);
                $("#FileName").val('');
            }

        </script>

    </head>
    <body>
        <%- include('header') %>
        <!-- TOASTY -->
        <div class="position-fixed top-0 end-0 p-3" style="z-index: 5">
            <div id="liveToast" class="toast hide" data-bs-animation="autohide" role="alert" aria-live="assertive" aria-atomic="true">
                <div class="toast-header">
                    <span id="toast_success" hidden><i class="fas fa-check-square text-success"></i></span>
                    <span id="toast_warning" hidden><i class="fas fa-exclamation-triangle text-warning"></i></span>
                    <span id="toast_danger" hidden><i class="fas fa-times-circle text-danger"></i></span>
                    <strong class="me-auto">&nbsp;MarkNote Notifier</strong>
                    <small>just now</small>
                    <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
                </div>
                <div class="toast-body">
                    <span id="toast_message"></span>
              </div>
            </div>
        </div>
        <div class="container pt-2">
            <div class="row">
                <div class="col-md">
                    <a class="btn btn-primary w-100 mb-2" data-bs-toggle="collapse" href="#Shortcuts" role="button" aria-expanded="false" aria-controls="collapseExample">
                        Toggle Shortcut List
                    </a>
                    <div class="collapse mb-2" id="Shortcuts">
                        <div class="card card-body">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th scope="col">Shortcut</th>
                                        <th scope="col">Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td><code>ALT / CTRL + S</code></td>
                                        <td>Save</td>
                                    </tr>
                                    <tr>
                                        <td><code>ALT + N</code></td>
                                        <td>New File</td>
                                    </tr>
                                    <tr>
                                        <td><code>ALT / CTRL + O</code></td>
                                        <td>Open File</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="col-md">
                    <div class="input-group mb-2">
                        <span class="input-group-text">Filename</span>
                        <input id="FileName" type="text" class="form-control" placeholder="<%=filemetadata.data.name%>">
                        <button onclick="save();" class="btn btn-primary" type="button">Rename</button>
                    </div>
                </div>
            </div>
            <textarea id="editor" class="w-100"><%if(raw){%><%-raw.data%><%}%></textarea>
            <div id="save_button">
                <button class="btn btn-primary" type="button" onclick="save();">
                    <i class="fab fa-google-drive"></i> &nbsp; Save &nbsp; <span id="save_spinner" class="spinner-border spinner-border-sm" role="status" aria-hidden="true" hidden></span>
                </button>
            </div>
            
        </div>
        <%- include('footer') %>
    </body>
</html>