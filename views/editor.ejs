<%- include('splash') %>

<!DOCTYPE html>
<html lang="en">
    <head>
        <!-- Viewport -->
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <!-- JQuery -->
        <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
        <!-- Bootstrap -->
        <script src="bootstrap-5.0.0-beta1-dist/js/bootstrap.min.js"></script>
        <link rel="stylesheet" href="bootstrap-5.0.0-beta1-dist/css/bootstrap.min.css">
        
        <!-- FontAwesome -->
        <script src="https://kit.fontawesome.com/c0fad50d4f.js" crossorigin="anonymous"></script>
        <!-- Highlight JS -->
        <script src="/highlight/highlight.pack.js"></script>
        <link rel="stylesheet" href="/highlight/tomorrow-night.css">

        <link rel="stylesheet" href="https://cdn.jsdelivr.net/simplemde/latest/simplemde.min.css">
        <script src="https://cdn.jsdelivr.net/simplemde/latest/simplemde.min.js"></script>
        
        <!-- Title -->
        <title>MarkNote | Editor</title>

        <style>
            #save_button
            {
                z-index: 1000;
                position: fixed;
                bottom: 32px;
                right: 12px;
            }
        </style>
        <script>
            // const base_url = "http://localhost:8080/";
            const base_url = "<%=GLOBAL_ROOT%>" + "/";
            var simplemde;

            // Keypress Methods!
            // https://stackoverflow.com/questions/93695/best-cross-browser-method-to-capture-ctrls-with-jquery#14180949
            $(window).bind('keydown', function(event) {
                if (event.ctrlKey || event.metaKey) {
                    switch (String.fromCharCode(event.which).toLowerCase()) {
                    case 's':
                        event.preventDefault();
                        save();
                        break;
                    case 'f':
                        event.preventDefault();
                        break;
                    case 'o':
                        event.preventDefault();
                        createPicker();
                        break;
                    case 'g':
                        event.preventDefault();
                        break;
                    }
                }
                if(event.altKey && String.fromCharCode(event.which).toLowerCase() == 'n')
                {
                    createNewFilePicker();
                }
                if(event.altKey && String.fromCharCode(event.which).toLowerCase() == 's')
                {
                    save();
                }
                if(event.altKey && String.fromCharCode(event.which).toLowerCase() == 'o')
                {
                    createPicker();
                }
            });

            $(document).ready(function()
{
                console.log("ready");
                
                simplemde = new SimpleMDE({
                    // autosave: {
                    //     enabled: true,
                    //     uniqueId: "<%-fileId%>",
                    //     delay: 1000,
                    // },
                    element: $("#editor")[0],
                    spellChecker: false,
                    renderingConfig: {
                        singleLineBreaks: false,
                        codeSyntaxHighlighting: true,
                    },
                    tabSize: 4,
                    styleSelectedText: false
                });
            });

            // Function to save File to GDrive
            // Also changes the name of the file too.
            async function save()
            {
                var filename = null;
                var id_FileName = $("#FileName")
                if(id_FileName.val())
                {
                    // Replace with new filename
                    filename = id_FileName.val();
                }
                else
                {
                    filename = id_FileName.attr('placeholder');
                }

                console.log("Filename: " + filename);

                // Setup for Ajax
                var settings = {
                    "url": base_url + "save",
                    "method": "POST",
                    "timeout": 0,
                    "data": {
                        "fileId": "<%-fileId%>",
                        "fileName": filename,
                        "data": simplemde.value()
                    }
                }

                // Start spinner
                $("#save_spinner").attr('hidden', false);
                $("#save_button").attr('disabled', true);
                // Save the File
                await $.ajax(settings).done(function(response)
                {
                    console.log(response);
                });
                // Stop Spinner
                $("#save_spinner").attr('hidden', true);
                $("#save_button").attr('disabled', false);
                $("#FileName").attr('placeholder', filename);
                $("#FileName").val('');
            }

        </script>

    </head>
    <body>
        <%- include('header') %>
        <div class="container pt-2">
            <div class="row">
                <div class="col-md">
                    <a class="btn btn-primary w-100 mb-2" data-bs-toggle="collapse" href="#Shortcuts" role="button" aria-expanded="false" aria-controls="collapseExample">
                        Toggle Shortcut List
                    </a>
                    <div class="collapse mb-2" id="Shortcuts">
                        <div class="card card-body">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th scope="col">Shortcut</th>
                                        <th scope="col">Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td><code>ALT / CTRL + S</code></td>
                                        <td>Save</td>
                                    </tr>
                                    <tr>
                                        <td><code>ALT + N</code></td>
                                        <td>New File</td>
                                    </tr>
                                    <tr>
                                        <td><code>ALT / CTRL + O</code></td>
                                        <td>Open File</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="col-md">
                    <div class="input-group mb-2">
                        <span class="input-group-text">Filename</span>
                        <input id="FileName" type="text" class="form-control" placeholder="<%=filemetadata.data.name%>">
                        <button onclick="save();" class="btn btn-primary" type="button">Rename</button>
                    </div>
                </div>
            </div>
            <textarea id="editor" class="w-100"><%if(raw){%><%-raw.data%><%}%></textarea>
            <div id="save_button">
                <button class="btn btn-primary" type="button" onclick="save();">
                    <i class="fab fa-google-drive"></i> &nbsp; Save &nbsp; <span id="save_spinner" class="spinner-border spinner-border-sm" role="status" aria-hidden="true" hidden></span>
                </button>
            </div>
            
        </div>
        <%- include('footer') %>
    </body>
</html>