<header>
    <nav class="navbar navbar-dark bg-dark">
        <div class="container-fluid">
            <h1 class="navbar-brand">MarkNote</h1>
            <div>
                <button class="btn btn-primary" onclick="window.open('/', '_parent')"><i class="fas fa-home"></i>&nbsp;Home</button>
                <button class="btn btn-primary" onclick="window.open('https://github.com/GlennCottam/MarkNote', 'blank')"><i class="fab fa-github"></i>&nbsp;View On Github</button>
                <% if(user) {%>
                    <!-- <p class="text-white"><%= user.id %></p> -->
                    <button class="btn bg-success text-white" onclick="window.open('/editor', '_parent')"><i class="fas fa-edit"></i>&nbsp;Editor</button>
                    <button class="btn bg-danger text-white" onclick="window.open('/logout', '_parent')"><i class="fas fa-sign-out-alt"></i>&nbsp;Logout</button>
                    <button class="btn text-white bg-primary">
                        <img class="rounded-pill" height="22px" alt="Profile_Picture" src="<%= user.profile.photos[0].url%>">&nbsp;<%= user.profile.names[0].displayName%>
                    </button>
                    <button class="btn bg-danger text-white" onclick="window.open('/get/userdata', '_parent')">USER_DATA</button>
                    <!-- <button class="btn bg-success text-white" onclick="window.open('/new', '_parent')">New File</button> -->
                    <button class="btn bg-success text-white" onclick="window.open('/picker', '_parent')">Browse Files</button>



                
                <% } else { %>
                    <button class="btn bg-success text-white" onclick="window.open('/login', '_parent')"><i class="fas fa-sign-in-alt"></i>&nbsp;Login</button>
                <% }%>

            </div>
        </div>
    </nav>
</header>